<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingTop="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginHorizontal="22dp"

        android:id="@+id/btn_previous"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/previous"
            android:background="@drawable/outline_day"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"/>



    </LinearLayout>






    <TextView
        android:layout_marginHorizontal="22dp"

        android:layout_marginTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행 플랜 리스트"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="18dp"
        android:textColor="@color/slinks_black"
        />

    <TextView
        android:layout_marginHorizontal="22dp"

        android:id="@+id/registed_places"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등록된 장소 10개"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="12sp"
        android:textColor="@color/slinks_black"
        android:contentDescription="등록된 장소개수"

        />


    <FrameLayout
        android:layout_marginHorizontal="22dp"


        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>




    </FrameLayout>

    <!--    지도 끝-->

    <LinearLayout
        android:layout_marginHorizontal="22dp"

        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="14dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/clock"/>
            <TextView
                android:fontFamily="@font/pretendard_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text=" 출발시간"/>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/timesetting_btn"
            android:layout_width="134dp"
            android:layout_height="40dp"


            android:background="@drawable/timesetting"
            android:text="오전 10:27"
            android:textColor="@color/grey60"
            android:textSize="18dp"
            android:fontFamily="@font/pretendard_semi_bold"
            />




    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_marginTop="96dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="60dp"
                android:layout_height="3dp"
                android:background="@drawable/place_line"/>


        </LinearLayout>


<!--        <GridView-->
<!--            android:layout_marginTop="10dp"-->
